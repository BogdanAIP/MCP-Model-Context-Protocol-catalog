{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Manifest",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "base_url": { "type": "string" },

    "auth": {
      "type": "object",
      "additionalProperties": true
    },

    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean"]
      }
    },

    "capabilities": {
      "description": "Array of strings or tool objects; both are allowed.",
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          { "type": "object", "additionalProperties": true }
        ]
      }
    },

    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "title": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "en": { "type": "string" },
                "ru": { "type": "string" }
              },
              "minProperties": 1
            }
          ]
        },

        "description": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "en": { "type": "string" },
                "ru": { "type": "string" }
              },
              "minProperties": 1
            }
          ]
        },

        "category": {
          "type": "string",
          "enum": ["ai", "devtools", "messaging", "productivity", "storage", "other"]
        },

        "homepage": { "type": "string" },
        "repo": { "type": "string" },
        "license": { "type": "string" },

        "badges": {
          "type": "array",
          "items": { "type": "string" }
        },

        "keywords": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "en": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "ru": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "minProperties": 1
            }
          ]
        }
      },
      "required": ["title", "category"]
    }
  },

  "required": ["name", "meta"]
}
