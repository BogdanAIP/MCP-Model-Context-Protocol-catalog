{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Manifest (stable draft-07)",
  "type": "object",
  "additionalProperties": true,

  "required": ["name", "version", "base_url", "capabilities"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "base_url": { "type": "string", "minLength": 1 },

    "auth": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": { "type": "string", "enum": ["bearer", "apikey"] },
        "env":  { "type": "string" },
        "in":   { "type": "string", "enum": ["header", "query"] },
        "header": { "type": "string" },
        "query":  { "type": "string" }
      }
    },

    "capabilities": {
      "type": "object",
      "additionalProperties": true
    },

    "endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["path", "method"],
        "properties": {
          "path":   { "type": "string" },
          "method": { "type": "string" },
          "headers": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "query": {
            "type": "object",
            "additionalProperties": { "type": ["string", "number", "boolean"] }
          }
        }
      }
    },

    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "title":       { "type": "string" },
        "description": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        },
        "homepage": { "type": "string" }
      }
    }
  }
}
