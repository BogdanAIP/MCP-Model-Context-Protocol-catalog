{
  "$id": "https://mcp-accelerator.github.io/schemas/mcp-server.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MCP Server Manifest",
  "type": "object",
  "additionalProperties": true,

  "required": ["name", "version", "base_url", "capabilities"],

  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },

    "base_url": { "type": "string", "minLength": 1 },

    "auth": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": { "type": "string", "enum": ["bearer","apikey","none"] },
        "env":  { "type": "string" },
        "in":   { "type": "string", "enum": ["header","query"] },
        "header_name": { "type": "string" }
      }
    },

    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "title":       { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        },
        "homepage": { "type": "string" },
        "category": {
          "type": "string",
          "enum": ["ai","devtools","messaging","productivity","storage","other"]
        },
        "badges": {
          "type": "array",
          "items": { "type": "string" }
        },
        "icon": { "type": "string" }
      }
    },

    "capabilities": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "tools":     { "type": "boolean" },
        "prompts":   { "type": "boolean" },
        "resources": { "type": "boolean" },
        "sampling":  { "type": "boolean" }
      }
    },

    "endpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "method": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name","path"]
      }
    },

    "headers": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
