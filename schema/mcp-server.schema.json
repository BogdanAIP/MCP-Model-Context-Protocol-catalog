{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcp-accelerator.github.io/schemas/mcp-server.schema.json",
  "title": "MCP Server Manifest",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "base_url": { "type": "string" },

    "auth": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": { "type": "string" },
        "env": { "type": "string" },
        "header": { "type": "string" },
        "query": { "type": "string" }
      }
    },

    "headers": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" }
        ]
      }
    },

    "capabilities": {
      "type": "array",
      "description": "Either string tags or detailed tool definitions",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "tool": { "type": "string" },
              "method": { "type": "string" },
              "path": { "type": "string" },
              "inputs": { "type": "object", "additionalProperties": true }
            }
          }
        ]
      }
    },

    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "title": {
          "anyOf": [
            { "type": "string" },
            {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "i18n map, e.g. {\"en\":\"…\",\"ru\":\"…\"}"
            }
          ]
        },
        "description": {
          "anyOf": [
            { "type": "string" },
            {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          ]
        },
        "keywords": {
          "anyOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          ]
        },
        "category": {
          "type": "string",
          "enum": ["ai", "devtools", "messaging", "productivity", "storage", "other"]
        },
        "homepage": { "type": "string" },
        "repo": { "type": "string" },
        "license": { "type": "string" },
        "badges": {
          "type": "array",
          "items": { "type": "string" }
        },
        "capabilities": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Human-readable capability tags for the UI"
        }
      }
    }
  },

  "required": ["meta"]
}
