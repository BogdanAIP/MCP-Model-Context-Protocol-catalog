{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Manifest",
  "type": "object",
  "required": [
    "name",
    "version",
    "base_url",
    "capabilities"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "base_url": {
      "type": "string",
      "minLength": 1
    },
    "auth": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "bearer",
            "apikey"
          ]
        },
        "env": {
          "type": "string"
        },
        "in": {
          "type": "string",
          "enum": [
            "header",
            "query"
          ]
        },
        "name": {
          "type": "string"
        },
        "scopes_hint": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "query_defaults": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "tool",
          "method",
          "path"
        ],
        "properties": {
          "tool": {
            "type": "string"
          },
          "method": {
            "type": "string",
            "enum": [
              "GET",
              "POST",
              "PUT",
              "PATCH",
              "DELETE"
            ]
          },
          "path": {
            "type": "string"
          },
          "inputs": {
            "type": "object"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$defs/i18nString"
        },
        "description": {
          "$ref": "#/$defs/i18nString"
        },
        "category": {
          "type": "string",
          "enum": [
            "messaging",
            "productivity",
            "devtools",
            "storage",
            "ai",
            "social",
            "other"
          ]
        },
        "homepage": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "badges": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "verified",
              "community"
            ]
          }
        },
        "maintainers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keywords": {
          "$ref": "#/$defs/i18nStringArray"
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "$defs": {
    "i18nString": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    },
    "i18nStringArray": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}