{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Manifest",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "base_url": { "type": "string" },

    "auth": {
      "type": "object",
      "additionalProperties": true
    },

    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean"]
      }
    },

    "capabilities": {
      "description": "Array of strings or tool objects; we allow both.",
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          { "type": "object", "additionalProperties": true }
        ]
      }
    },

    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },

        "category": {
          "type": "string",
          "enum": ["ai", "devtools", "messaging", "productivity", "storage", "other"]
        },

        "homepage": { "type": "string" },
        "repo": { "type": "string" },
        "license": { "type": "string" },

        "badges": {
          "type": "array",
          "items": { "type": "string" }
        },

        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["title", "category"]
    }
  },

  "required": ["name", "meta"]
}
