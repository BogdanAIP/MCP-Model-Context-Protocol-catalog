{
  "name": "notion_mcp",
  "version": "1.0.0",
  "base_url": "https://api.notion.com/v1",
  "auth": {
    "type": "bearer",
    "env": "NOTION_TOKEN"
  },
  "headers": {
    "Notion-Version": "2022-06-28"
  },
  "capabilities": [
    {
      "tool": "notion_mcp.create_page",
      "method": "POST",
      "path": "/pages",
      "inputs": {
        "body": "object"
      }
    }
  ],
  "meta": {
    "title": "Notion",
    "description": "Create pages and databases",
    "category": "productivity",
    "homepage": "https://developers.notion.com/",
    "repo": "https://github.com",
    "license": "MIT",
    "badges": [
      "community"
    ],
    "keywords": {
      "en": [
        "notion",
        "pages",
        "databases"
      ],
      "ru": [
        "notion",
        "страницы",
        "базы данных"
      ]
    },
    "capabilities": [
      "REST API",
      "OAuth"
    ]
  }
}
