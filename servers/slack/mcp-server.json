{
  "name": "slack_mcp",
  "version": "1.0.0",
  "base_url": "https://slack.com/api",
  "auth": {
    "type": "bearer",
    "env": "SLACK_BOT_TOKEN",
    "scopes_hint": [
      "chat:write"
    ]
  },
  "capabilities": [
    {
      "tool": "slack_mcp.post_message",
      "method": "POST",
      "path": "/chat.postMessage",
      "inputs": {
        "body": {
          "channel": "string",
          "text": "string",
          "mrkdwn?": "boolean"
        }
      }
    }
  ],
  "meta": {
    "title": {
      "en": "Slack",
      "ru": "Slack"
    },
    "description": {
      "en": "Post messages to Slack",
      "ru": "Публикация сообщений"
    },
    "category": "messaging",
    "homepage": "https://api.slack.com",
    "repo": "https://github.com",
    "license": "MIT",
    "badges": [
      "community"
    ],
    "keywords": {
      "en": [
        "slack",
        "messages",
        "chat"
      ],
      "ru": [
        "slack",
        "сообщения",
        "чат"
      ]
    }
  }
}